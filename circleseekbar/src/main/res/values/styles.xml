<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircleProgressViewStyle">
        <item name="backgroundCircleLineWidth">2dp</item>
        <item name="progressCircleLineWidth">2dp</item>
        <item name="backgroundCircleLineColor">#ebebed</item>
        <item name="progressCircleLineColor">#007eff</item>
        <item name="dotRadius">19dp</item>
        <item name="dotColor">#007eff</item>
        <item name="minValue">0</item>
        <item name="maxValue">100</item>
        <item name="value">0</item>
        <item name="textAppearance">@style/CircleProgressViewStyle.TextAppearance</item>
        <item name="showCounter">true</item>
    </style>
    <style name="CircleProgressViewStyle.TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>